<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MO: Members Only</title>
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link rel="stylesheet" href="/stylesheets/index/main-public.css" />
    <link rel="stylesheet" href="/stylesheets/index/main-unverified.css" />
    <link rel="stylesheet" href="/stylesheets/index/verified.css" />
    <script src="/javascripts/index/main.js" defer></script>
    <script src="/javascripts/index/verified.js" defer></script>
  </head>
  <body>
    <%- include('main_nav',{isPublic:false,isVerified:true}) %>
    <main>
      <div class="posts">
        <%for(const post of posts){%>
          <%- include('partials/verified_post',{isAdmin,post}) %>
        <%}%>
      </div>
    </main>
    <div class="dialogs">
      <%- include('at_least_unverified_dialogs') %>
      <dialog id="become-admin-dialog">
        <form method="dialog">
          <section class="field">
            <label for="passcode">Enter secret passcode to become admin</label>
            <input
              type="text"
              maxlength="50"
              required
              id="passcode"
              name="passcode"
            />
          </section>
          <div class="action-buttons">
            <button
              formmethod="post"
              id="submit-become-admin-form-button"
              formaction="/become-admin"
            >
              Become Admin
            </button>
            <button formnovalidate>Cancel</button>
          </div>
        </form>
      </dialog>
      <%- include('partials/post_detail_dialog',{isAdmin,isVerified:true}) %>
    </div>
  </body>
</html>
